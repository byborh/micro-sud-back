{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./", 
      "paths": {
        "@core/*": ["src/core/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@modules/*": ["src/modules/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  